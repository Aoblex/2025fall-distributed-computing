<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
  <!-- Point clients to the NameNode. Use hostname (service name) resolvable by Docker networking -->
  <property>
    <name>fs.defaultFS</name>
    <value>hdfs://namenode:9000</value>
  </property>

  <!-- RPC and HTTP addresses for YARN / HDFS web UIs can also be set here if desired -->
</configuration>
